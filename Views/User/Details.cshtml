@model KRoberts_Theatre_Blog.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.UserName</h2>

<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            Surname
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Forename
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Registration Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Suspended)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Suspended)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Promote", "Promote",  new {id = @Model.Id}, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Suspend", "Suspend",  new {id = @Model.Id}, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back", "All",  null, new { @class = "btn btn-primary" })
</p>